<header>
  <div class="hamburger-menu">
    <div class="hamburger-menu__topbar"></div>
    <div class="hamburger-menu__bottombar"></div>
  </div>
  {% assign splittedBrandName = shop.name | split: " " %}

  <h1 class="brand-name">
    <a href="{{ shop.url }}">
      {% for singleWord in splittedBrandName %}
        {{singleWord}} <br>
      {% endfor %}
    </a>
  </h1>
  
  <div class="cart-image-container">
    <a href="/cart">
      <img src="{{ 'cart-outline.svg' | asset_url }}" alt="some alt" />
    </a>
  </div>  
</header>




