<section class="navigation-menu">
    <div class="header">
        <div class="cancel-btn">
            <div class="mdiv">
                <div class="md"></div>
              </div>
        </div>
        <ul class="nav-list">
            {% for link in linklists.main-menu.links %}
                <li class="nav-list__item">
                    <a href="{{ link.url }}"> {{ link.title | downcase }} </a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <section class="product-carousel">

        <!-- { for product in all_products }  geht nich tda all_products ein dictionary ist und kein array! 
        ... daher all_prodcuts via collections.main-products.products (collection muss extra angelegt werden!) -->
        {% for product in collections.main-products.products %}
            {% include 'productitem' %}
        {% endfor %}

    </section>
</section>